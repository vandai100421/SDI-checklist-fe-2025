{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    // "baseUrl": "./",
    "paths": {
      "@assets/*": ["./assets/*"],
      "@components/*": ["./src/components/*"],
      "@utils/*": ["./src/utils/*"],
      "@styles/*": ["./src/styles/*"],
      "@config": ["./src/config"],
      "@/src/apis": ["./src/apis"],
      "@theme": ["./src/theme"],
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
